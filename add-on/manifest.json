{

  "description": "Pipe youtube to a downloader or a player",
  "manifest_version": 2,
  "name": "YTDLPlayer",
  "version": "1.0",
  "icons": {
    "48": "icons/message.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "ytdlplayer@mdk.wtf",
      "strict_min_version": "50.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/message.png",
	"default_title": "YTDLPlayer",
	"default_popup": "popup/popup.html"
  },
  
  "permissions": 
	["nativeMessaging",
	"tabs"]

}
